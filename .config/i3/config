exec --no-startup-id compton -cb --config ~/.config/compton/compton.conf

bindsym Print exec gnome-screenshot
bindsym $mod+Print exec gnome-screenshot --interactive

bindsym $mod+b exec nemo
bindsym $mod+Shift+b exec chromium

bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle

bindsym XF86MonBrightnessUp exec xbacklight -inc 20
bindsym XF86MonBrightnessDown exec xbacklight -dec 20

for_window [class="konsole"] floating enable, resize set 1000 600, border pixel 0
for_window [title="alsamixer"] floating enable
